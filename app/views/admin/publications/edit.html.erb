<h3 class='text-center'>Редактировать <%= @publication.title %></h3>
<br>
<div class="row justify-content-md-center">
  <%= form_for @publication, url: admin_publication_path(@publication) do |f| %>
    <div class="form-group">
      <label>Заголовок</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Описание</label>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Ссылка на файл</label>
      <%= f.text_field :file_url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Обновить Публикацию", class: 'btn btn-success' %>
    </div>
    <div class="form-group">
      <%= link_to 'Назад', admin_publications_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
