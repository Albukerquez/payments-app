<h2 class="text-center">Публикации</h2>
<br>
<div class="text-center">
  <%= link_to "Новая публикация", new_admin_publication_path, class: 'btn btn-success text-center' %>
</div>
<br>
<div class="row justify-content-md-center">
  <% @publications.each do |publication| %>
  <div class="card" style="width: 20rem;">
      <h4 class="card-header text-center"><%= publication.title %></h4>
      <div class="card-block">
        <p class="card-text"><%= publication.description %></p>
        <p class="card-text"><%= publication.file_url %></p>
      </div>
      <div class="card-block">
        <%= link_to "Детали", admin_publication_path(publication), class: "btn btn-info" %>
        <%= link_to "Редактировать", edit_admin_publication_path(publication), class: "btn btn-warning" %>
      </div>
  </div>
  <% end %>
</div>
